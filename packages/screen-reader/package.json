{
  "name": "@ubie-inc/screen-reader-react",
  "version": "0.1.0",
  "description": "React Hooks for Capacitor ScreenReader plugin",
  "keywords": [
    "react",
    "capacitor",
    "hooks",
    "ionic framework",
    "ionic"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ubie-inc/capacitor-react-hooks.git"
  },
  "files": [
    "dist/"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run transpile",
    "clean": "rimraf dist",
    "eslint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint": "npm run eslint",
    "lint.fix": "npm run eslint -- --fix",
    "test": "echo tests are in process",
    "transpile": "tsc"
  },
  "peerDependencies": {
    "@capacitor/core": ">=3.0.0",
    "@capacitor/screen-reader": "*",
    "react": "*"
  },
  "prettier": "../../.prettierrc.json",
  "eslintConfig": {
    "extends": "../../.eslintrc.json"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist-transpiled",
      "dist",
      "test-app"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
